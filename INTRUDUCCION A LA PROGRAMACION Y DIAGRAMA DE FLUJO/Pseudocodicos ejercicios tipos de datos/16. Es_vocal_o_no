Proceso Es_vocal_o_no
	Definir caracter Como Caracter;
	Definir esVocal Como Logico;
	Escribir "Ingrese un Caracter";
	Leer caracter;
	
	caracter = Minusculas(caracter); //esto para si se introduce el caracter en mayuscula lo convierta a minuscula y evitar un error
	esVocal = (caracter="a") o (caracter="e") o (caracter="i") o (caracter="o") o (caracter="u");
	
	Si esVocal Entonces
		Escribir "El caracter - ", caracter,  " - es vocal";
		
	SiNo
		Escribir "El caracter - ", caracter,  " - no es vocal";
	FinSi
FinProceso
