Proceso Matrix_2x2
	Definir suma, matriz, i, j Como Entero;
	Definir promedio Como Real;
	Dimension matriz[2,2];
	suma = 0;
	
	//Ingresar los valores de la matriz
	Para i = 0 Hasta 1 Hacer
		Para j = 0 Hasta 1 Hacer
			Escribir "Ingrese un numero en la posición [", i+1, ",",j+1, "]; ";
			Leer matriz[i,j];
			suma = suma + matriz[i,j];
		FinPara
	FinPara
	
	//Calcular promedio
	promedio = suma / 4;
	
	Escribir "El promedio de los elementos de la matriz es: " promedio;
FinProceso
